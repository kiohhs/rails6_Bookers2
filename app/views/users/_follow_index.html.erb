<table class='table'>
  <thead>
  <tr>
    <th>image</th>
    <th>name</th>
    <th>following</th>
    <th>followers</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
      <td><%= user.name %></td>
      <td><%= user.following.count %></td>
      <td><%= user.followers.count %></td>
      <td><%= link_to 'Show', user %></td>
    </tr>
  <% end %>
  </tbody>
</table>